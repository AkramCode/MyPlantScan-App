{
    "extends":  "expo/tsconfig.base",
    "compilerOptions":  {
                            "strict":  true,
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      },
                            "types":  [
                                          "expo-router/entry",
                                          "node"
                                      ],
                            "typeRoots":  [
                                              "./types",
                                              "./node_modules/@types"
                                          ]
                        },
    "include":  [
                    "**/*.ts",
                    "**/*.tsx",
                    ".expo/types/**/*.ts",
                    "expo-env.d.ts"
                ],
    "exclude": [
                    "backend/**/*"
                ]
}
