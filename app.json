{
  "expo": {
    "name": "MyPlantScan",
    "slug": "myplantscan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myplantscan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F9FAFB"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.myplantscan.www",
      "infoPlist": {
        "NSCameraUsageDescription": "$(PRODUCT_NAME) uses the camera to scan and identify plants and analyze plant health.",
        "NSPhotoLibraryUsageDescription": "$(PRODUCT_NAME) accesses your photo library so you can select images to identify plants and analyze their health.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "associatedDomains": [
        "applinks:myplantscan.com",
        "applinks:www.myplantscan.com"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#F9FAFB"
      },
      "package": "com.myplantscan.www",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ],
      "intentFilters": [
        {
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ],
          "data": [
            {
              "scheme": "myplantscan"
            }
          ],
          "action": "VIEW"
        },
        {
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ],
          "data": [
            {
              "scheme": "https",
              "host": "myplantscan.com",
              "pathPrefix": "/auth"
            },
            {
              "scheme": "https",
              "host": "myplantscan.com",
              "pathPrefix": "/reset-password"
            },
            {
              "scheme": "https",
              "host": "myplantscan.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "www.myplantscan.com",
              "pathPrefix": "/auth"
            },
            {
              "scheme": "https",
              "host": "www.myplantscan.com",
              "pathPrefix": "/reset-password"
            },
            {
              "scheme": "https",
              "host": "www.myplantscan.com",
              "pathPrefix": "/"
            }
          ],
          "action": "VIEW",
          "autoVerify": true
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://www.myplantscan.com/"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to use the camera to scan plants"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "$(PRODUCT_NAME) accesses your photos so you can choose images of plants for identification and health analysis."
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "edgeToEdgeEnabled": true
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#10B981",
          "defaultChannel": "default"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "https://www.myplantscan.com/"
      },
      "eas": {
        "projectId": "fa3bcbf7-3f98-41dd-983e-e712ef6a7030"
      }
    }
  }
}
